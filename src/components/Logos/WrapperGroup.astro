---
import Typography from '../Typography.astro';

interface Props {
    title: string,
    description: string,
    reverse?: boolean
}
const { title, description } = Astro.props;

---
<div>
    <div class="my-5">
        <Typography as="h3" variant="skill-title" color="sky" >
            <strong>{title}</strong>
        </Typography>
        <Typography as="p" variant="skill-description" color="default" class:list={'m-0'} >
            {description}
        </Typography>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-6 md:gap-3 mt-3">
        <slot />
    </div>
</div>

