---
import Logo from "./Logo.astro";
---

<div id="loading" class="loader__container bg-gray-900">
    <div class="animate-spin-slow w-30 h-30">
        <Logo height={200} width={200} />
    </div>
    <h1 class="text-white font-display">Cargando</h1>
    <style>
        .loader__container {
            width: 100vw;
            height: 100vh;
            z-index: 10;
            display: flex;
            flex-direction: column;
            position: absolute;
            top: 0;
            left: 0;
            justify-content: center;
            align-items: center;
            align-content: center;
        }
    </style>
</div>
<script lang="ts">
    document.addEventListener("DOMContentLoaded", () => {
        if (document.getElementById("loading") !== null) {
            document.getElementById("loading").classList.add("!hidden");
        }
    });
</script>
